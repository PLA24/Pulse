                    <div class="item" data-value="ae"><i class="ae flag"></i>United Arab Emirates</div>
                    <div class="item" data-value="us"><i class="us flag"></i>United States</div>
                    <div class="item" data-value="zw"><i class="zw flag"></i>Zimbabwe</div>
                </div>
                </div>
          </div>     
