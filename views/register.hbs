<html><head>
  <!-- Standard Meta -->
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

  <!-- Site Properties -->
  <title>Register</title>


  <style type="text/css">
    body {

      background-image: url("https://fpdl.vimeocdn.com/vimeo-prod-skyfire-std-us/01/3191/7/190959054/634938835.mp4?token=1522084345-0x804f715212595d6e6e7b41be5c2bbb3f779fc539");
    }
    body > .grid {
      height: 100%;
    }
    .image {
      margin-top: -100px;
    }
    .column {
      max-width: 450px;
    }
    #video-bg-elem {
				position: absolute;
				top: 0;
				left: 0;
				min-height: 100%;
				min-width: 100%;
			}
  </style>
</head>
<body>
  <div class="background-wrap">
        <video id="video-bg-elem" preload="auto" autoplay="true" loop="loop" muted="muted">
          <source src="/video/background.mp4" type="video/mp4">
          Sorry That The Amazing video Is Not Supported Please Contact us and tell us which operating system or which browser you use Sorry!
        </video>
      </div>
<div class="ui middle aligned center aligned grid">
  <div class="column">
    <div class="content">
      <div class="ui small image">
        <img src="/images/pulselogo.png">
      </div>
    </div>
    <h2 class="ui inverted image header">
      <div class="content">
        Register
      </div>
    </h2>
    {{#if errors}}
      {{#each errors}}
        <div class = "ui warning message">{{msg}}</div>
        {{/each}}
        {{/if}}
    <form class="ui large form" method = "post" action="/users/register">
      <div class="ui stacked segment">
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <input type="text" name="username" placeholder="Username">
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="at icon"></i>
            <input type="text" name="email" placeholder="E-mail address">
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <input type="password" name="password" placeholder="Password">
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <input type="password" name="repassword" placeholder="Re-enter Password">
          </div>
        </div>
        <div class="field">
            <div class="ui fluid search selection dropdown" id="ddTownship">
              <i class="building icon"></i>
                <input type="hidden" name="township">
                <i class="dropdown icon"></i>
                <div class="default text">Select township</div>
                <div class="menu">
                    <div class="item" data-value="Amsterdam">Amsterdam</div>
                    <div class="item" data-value="Rotterdam">Rotterdam</div>
                    <div class="item" value="Den Haag">Den Haag</div>
                    <div class="item" value="Utrecht">Utrecht</div>
                    <div class="item" value="Eindhoven">Eindhoven</div>
                    <div class="item" data-value="Tilburg">Tilburg</div>
                    <div class="item" data-value="Almere">Almere</div>
                </div>
                </div>
          </div>
        <button type="submit" class="ui fluid large blue submit button" name="Sign-Up">Sign-Up</button>
      </div>

      <div class="ui error message"></div>


    </form>
  </div>
</div>

<script>
    $('#ddTownship').dropdown('get text');
</script>



</body></html>
