<!DOCTYPE html>
<html><head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

    <title>Settings</title>

    <link rel='stylesheet' href='/stylesheets/settings.css' />
    <link rel="stylesheet" href="/semantic/dist/semantic.css" />

    <style type="text/css">
        body {
            margin-top: 1%;
            margin-left: 10%;
        }
        .input {
            display: inline-block;
            float: right;
            clear: right;
            width: 250px;
            text-align: right;
        }
        label{
            float: left;
            clear: left;
            width: 250px;
            text-align: left;
            font-size: x-large;
            font-family: "Arial Black";
        }
        .button{
            width: 100px;
        }
    </style>
    <style media="screen">
        #settings{
            margin-top: 100px;
        }
    </style>
    <script type="text/javascript">
        $(function () {
            $('#usernameCheck').change(function () {
                var st = this.checked;
                if(st) {
                    $('#usernameText').prop('disabled', false);
                }
                else{
                    $('#usernameText').prop('disabled', true);
                }
            })
        })
        $(function () {
            $('#emailCheck').change(function () {
                var st = this.checked;
                if(st) {
                    $('#emailText').prop('disabled', false);
                }
                else{
                    $('#emailText').prop('disabled', true);
                }
            })
        })
        $(function () {
            $('#passwordCheck').change(function () {
                var st = this.checked;
                if(st) {
                    $('#passwordText').prop('disabled', false);
                }
                else{
                    $('#passwordText').prop('disabled', true);
                }
            })
        })
        $(function () {
            $('#townshipCheck').change(function () {
                var st = this.checked;
                if(st) {
                    $('#townshipText').prop('disabled', false);
                }
                else{
                    $('#townshipText').prop('disabled', true);
                }
            })
        })
    </script>
</head>
<body>
<!--Comments-->
<div class="ui grid">
        <div class="twelve wide stretched column">
            <h1 class="ui header" id="titel"><i class="wrench icon"></i>Settings</h1>
            <br>
        <!--Comments-->
            <!--Comments-->
             <form class="ui large form" method="post" action="/users/settings/username">
                    <label for="inputUsername">Username</label>
                 <div class="ui input">
                     <input id="usernameText" type="text" name="username" value="{{UserName}}" disabled>
                     <button class="ui blue submit button" id="editUsername">Save</button>
                    <div class="column">
                        <div class="ui test toggle checkbox">
                            <input id="usernameCheck" type="checkbox" >
                            <label>edit</label>
                         </div>
                    </div>
                 </div>
            </form>
            <br>
            <!--Comments-->
            <form class="ui large form" method="post" action="/users/settings/email">
                <label for="inputEmail">Email</label>
            <div class="ui input">
                <input id="emailText" type="text" name="email" value="{{Email}}" disabled>
                <button class="ui blue submit button" id="editEmail">Save</button>
                <div class="column">
                    <div class="ui test toggle checkbox">
                        <input id="emailCheck" type="checkbox" >
                        <label>edit</label>
                    </div>
                </div>
            </div>
            </form>
            <br>
            <!--Comments-->
            <form class="ui large form" method="post" action="/users/settings/password">
            <label>Password</label>
            <div class="ui input">
                <input id="passwordText" type="password" name="password" value="{{Password}}" disabled>
                <button class="ui blue submit button" id="editPassword">Save</button>
                <div class="column">
                    <div class="ui test toggle checkbox">
                        <input id="passwordCheck" type="checkbox" >
                        <label>edit</label>
                    </div>
                </div>
            </div>
            </form>
            <br>
            <!--Comments-->
            <form class="ui large form" method="post" action="/users/settings/township">
            <label>Township</label>
                <div class="ui input">
                <input id="townshipText" type="text" name="township" value="{{Township}}" disabled>
                    <button class="ui blue submit button" id="editTownship">Save</button>
                    <div class="column">
                        <div class="ui test toggle checkbox">
                            <input id="townshipCheck" type="checkbox" >
                            <label>edit</label>
                        </div>
                    </div>
                </div>
            </form>
            <br>
        </div>
    </div>
</body>
</html>
